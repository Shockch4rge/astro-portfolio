---
import type { Heading } from "@utils/types/Heading";

type Props = { heading: Heading };
const { heading } = Astro.props;
---

<li class={`${heading.depth === 3 ? "ml-6 text-base" : "text-lg"} whitespace-`}>
    <a href={`#${heading.slug}`} class="group relative bg-[length:0%_1px,_100%_2px] hover:bg-[length:100%_1px,0%_2px] bg-left-bottom bg-gradient-to-r from-teal-300 to-cyan-400 no-underline bg-no-repeat transition-[background-size] duration-300 ease-in-out">
        {heading.text}
    </a>
    {
        heading.subheadings.length > 0 && (
            <ul class="mt-1 space-y-1">
                {heading.subheadings.map(subheading => (
                    <Astro.self heading={subheading} />
                ))}
            </ul>
        )
    }
</li>
